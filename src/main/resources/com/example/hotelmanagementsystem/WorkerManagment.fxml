<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.hotelmanagementsystem.manager.WorkerFormController">
    <center>
        <HBox alignment="TOP_LEFT" spacing="20" BorderPane.alignment="CENTER">
            <VBox prefWidth="300" spacing="10">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Add Worker" />
                <Label text="Name:" />
                <TextField fx:id="nameField" promptText="Enter worker's name" />
                <Label text="Contact Information:" />
                <TextField fx:id="contactField" promptText="Enter contact information" />
                <Label text="Salary:" />
                <TextField fx:id="salaryField" promptText="Enter salary" />
                <Label text="Job Title:" />
                <TextField fx:id="jobTitleField" promptText="Enter job title" />
                <Button fx:id="submitButton" onAction="#handleAddWorker" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Submit" />
            </VBox>
            <TableView fx:id="workerTable" prefWidth="500">
                <columns>
                    <TableColumn fx:id="nameColumn" text="Name" />
                    <TableColumn fx:id="contactColumn" text="Contact Information" />
                    <TableColumn fx:id="salaryColumn" text="Salary" />
                    <TableColumn fx:id="jobTitleColumn" text="Job Title" />
                </columns>
            </TableView>
        </HBox>
    </center>
</BorderPane>
